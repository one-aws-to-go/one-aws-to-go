{
  "name": "oatg-backend",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "dev": "npm run build && sam local start-api --env-vars env.json -p 3001",
    "build": "npm run clean && tsc",
    "prebuild": "npm i",
    "postbuild": "npm prune --production && cp -R node_modules build/node_modules && npm run db:generate && npm run clean:build-modules",
    "clean": "rm -rf build",
    "clean:build-modules": "rm -rf build/node_modules/prisma && rm -rf build/node_modules/@prisma/engines && rm -rf build/node_modules/.bin",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "db:reset": "prisma migrate reset",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "axios": "^0.27.2",
    "libsodium-wrappers": "^0.7.10",
    "path-to-regexp": "^6.2.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.104",
    "@types/libsodium-wrappers": "^0.7.10",
    "@types/node": "^18.11.0",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "prisma": "^4.3.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
